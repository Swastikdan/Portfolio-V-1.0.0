---
import skills from "./Data/SkillList";
const { WithImage, WithoutImage } = skills[0];
import CdnLink from "./Data/CdnLink";
---

<div id="skills" class="relative reveal-element">
  <div
    class="max-w-7xl mx-auto px-6 md:px-12 xl:px-6 md:py-10 relative m-auto text-gray-500"
  >
    <div class="mx-auto">
      <div class="mb-16 md:w-2/3 lg:w-1/2">
        <div
          class="relative mb-4 text-2xl font-bold text-sky-800 dark:text-white lg:mb-0 lg:text-4xl uppercase before:absolute before:-inset-2 before:w-full before:h-0.5 before:origin-left dark:before:bg-yelloe-500 before:mx-auto before:mt-auto before:rounded-full before:bg-sky-800 before:transition before:scale-x-[.25]"
        >
          My Skills
        </div>
      </div>
    </div>
    <div class="grid gap-6 md:mx-auto md:w-8/12 lg:w-full lg:grid-cols-3">
      {
        WithImage.map((skill) => (
          <div class="group space-y-6 px-8 py-12 text-center rounded-3xl bg-gray-100 dark:bg-gray-800 p-4 text-gray-800 dark:text-gray-400 border border-gray-300  dark:border-gray-700 duration-200 hover:border-blue-600 hover:shadow-xl hover:shadow-blue-600/20 dark:hover:border-indigo-300/30 bg-opacity-50 dark:bg-opacity-50 reveal-element">
            <img
              class="mx-auto w-20"
              src={CdnLink + skill.ImageLink}
              alt={skill.Title}
              loading="lazy"
              width="50"
              height="50"
            />
            <h3 class="text-2xl font-semibold text-gray-950 dark:text-white">
              {skill.Title}
            </h3>
            <p class="gotham hidden md:block">{skill.Description}</p>
          </div>
        ))
      }
    </div>
    <div
      class="grid grid-cols-2 gap-6 md:mx-auto md:w-8/12 lg:w-full lg:grid-cols-4 pt-5"
    >
      {
        WithoutImage.map((skill) => (
          <div class="group space-y-6 px-4 lg:px-8 py-6 lg:py-12 text-center rounded-3xl bg-gray-100 dark:bg-gray-800 text-gray-700 border border-gray-300  dark:border-gray-700 duration-200 hover:border-blue-600 hover:shadow-xl hover:shadow-blue-600/20 dark:hover:border-indigo-300/30 bg-opacity-50 dark:bg-opacity-50 reveal-element">
            <h3 class="text-md lg:text-2xl text-center font-semibold text-gray-800 dark:text-white">
              {skill}
            </h3>
          </div>
        ))
      }
    </div>
  </div>
</div>
