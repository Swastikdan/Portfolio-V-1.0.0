---
const { techstacks } = Astro.props;
import TechStackLogos from "./Data/TechStackLogos";
import CdnLink from "./Data/CdnLink";
---

<div class="tech-stack specific-elements-to-toggle reveal-element">
  <div class="max-w-7xl mx-auto px-6 md:px-12 xl:px-6 md:py-10">
    <span class="text-sky-900 text-lg py-3 lg:text-3xl"></span>
    <span class="block font-semibold text-gray-500 dark:text-gray-400 pb-5 pt-3"
    ></span>
    <div class="mx-auto">
      <div
        class="mb-4 flex flex-col items-center md:mb-8 lg:flex-row lg:justify-between"
      >
        <h2
          class="mb-2 text-center text-2xl font-bold text-sky-800 dark:text-white lg:mb-0 lg:text-4xl uppercase"
        >
          Tech Stack
        </h2>
        <span
          class="flex space-x-2 max-w-md text-center items-center text-gray-400 lg:text-right"
        >
          <span class="hidden lg:block w-14 border-b-2 border-gray-600"></span>
          <span class="font-medium text-gray-600 dark:text-gray-400"
            >The Tech I Use To Build My Projects</span
          >
        </span>
      </div>

      <div
        class="grid grid-cols-2 gap-4 rounded-xl md:rounded-2xl md:grid-cols-3 lg:grid-cols-4 lg:gap-6 py-5"
      >
        {
          techstacks.map((tech) => (
            <div
              aria-label={tech}
              class="tech-stack-item-1 flex h-16 items-center  rounded-xl  md:rounded-2xl bg-gray-100 dark:bg-gray-800 p-4 text-gray-700 sm:h-20 border border-gray-300   dark:border-gray-700  duration-200 hover:border-blue-600 hover:shadow-xl hover:shadow-blue-600/20 dark:hover:border-[#75AC64]/30  grayscale-0  justify-center space-x-4 "
            >
            
                <img
                  class="w-auto rounded h-8 md:h-10 ld:h-14"
                  src={CdnLink + TechStackLogos[tech]}
                  alt={tech}
                  loading="lazy"
                  width="128"
                  height="128"
                />
                <span class=" md:text-2xl block font-light dark:text-white">
                  {tech}
                </span>
              </div>
           
          ))
        }
      </div>
    </div>
  </div>
</div>
